<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Title for the Campus Section -->
    <TextView
        android:id="@+id/campus_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Campus"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Example Content (List or Info Section) -->
    <TextView
        android:id="@+id/campus_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Campus section."
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray" />

    <!-- Placeholder for additional content like RecyclerView or buttons -->
</LinearLayout>
